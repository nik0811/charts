{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/mastodon"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/mastodon"
        },
        "runtime_parameters": "",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "L4"
          }
        }
      },
      "actions": [
        {
          "action_id": "health-check",
          "params": {
            "endpoint": "lb-mastodon-apache-http",
            "app_protocol": "HTTP"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "vars_file": "vars.yaml",
            "resources": {
              "path": "/.vib/mastodon/goss"
            },
            "remote": {
              "workload": "deploy-mastodon-web"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "resources": {
              "path": "/.vib/mastodon/cypress"
            },
            "endpoint": "lb-mastodon-apache-http",
            "app_protocol": "HTTP",
            "env": {
              "user": "vib-user@gmail.com",
              "password": "bitnami!1234"
            }
          }
        }
      ]
    }
  }
}
